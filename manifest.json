
{
  "manifest_version": 3,
  "name": "PhishShield",
  "version": "1.0",
  "description": "Detects phishing emails and scans URLs using VirusTotal.",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.virustotal.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
